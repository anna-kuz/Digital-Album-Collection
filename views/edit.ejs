<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/header.ejs', {title: `Edit Album`}) %>
    <link rel="stylesheet" href="/styles/edit.css">
</head>

<body>
    <%- include('./partials/nav.ejs') %>

    <section class="hero">
        <h2>Edit a Listing</h2>
        <h4><i>Helping beans find their happily ever after, one adoption at a time</i></h4>
    </section>

    <form method="POST" action="/albums/<%= album._id %>?_method=PUT">
        <!-- ALBUM COVER -->
        <label for="albumCover">Album Cover (URL):</label>
        <input type="text" id="albumCover" name="albumCover" placeholder="(preferably a square image)" value="<%= album.albumCover %>" required>
        <br>
        <!-- ALBUM NAME -->
        <label for="albumName">Album Name:</label>
        <input type="text" id="albumName" name="albumName" value="<%= album.albumName %>" required>
        <br>
        <!-- BAND NAME -->
        <label for="bandName">Band Name:</label>
        <input type="text" id="bandName" name="bandName" value="<%= album.bandName %>" required>
        <br>
        <!-- ALBUM YEAR -->
        <label for="year">Year:</label>
        <input type="number" id="age" name="age" min="0" value="<%= album.year %>" required>
        <br>
        <!-- GENRE -->
        <label for="genre">Genre:</label>
        <input type="text" id="genre" name="genre" value="<%= album.genre %>" required>
        <br>
        <!-- DESCRIPTION -->
        <label for="description">Description:</label>
        <input type="text" id="description" name="description" value="<%= album.description %>">
        <br>
        <!-- FAVORITED? -->
        <label for="isFavorited">Favorited?</label>
        <select id="isFavorited" name="favorited" value="<%= album.isFavorited %>" required>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select>
        <br>
        <!-- SPOTIFY LINK -->
        <label for="spotifyLink">Spotify Link (URL):</label>
        <input type="text" id="spotifyLink" name="spotifyLink" value="<%= album.spotifyLink %>" required>
        <br>
        <!-- SONG LIST -->

        <!--  -->
        <input type="submit" value="Edit Album">
    </form>

    <%- include('./partials/footer.ejs') %>
</body>

</html>