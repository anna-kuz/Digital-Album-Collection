<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/header.ejs', {title: `Edit Album`}) %>
    <link rel="stylesheet" href="/styles/form.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="icon" type="image" href="https://external-content.duckduckgo.com/iu/?u=http%3A%2F%2Fwww.ispsd.com%2Fwp-content%2Fuploads%2F2013%2F02%2Fwpid-vinyl-record-disc-512.png&f=1&nofb=1&ipt=c5478cc32832f4282f6895714e79dec33da619350aaf74861275da9935b3f06a&ipo=images" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cinzel&display=swap" rel="stylesheet">
</head>

<body>
    <%- include('./partials/nav.ejs') %>

    <section class="hero">
        <h2>Edit an Album</h2>
    </section>

    <form method="POST" action="/albums/<%= album._id %>?_method=PUT">
        <!-- ALBUM COVER -->
        <label for="albumCover">Album Cover (URL):</label>
        <input type="text" id="albumCover" name="albumCover" placeholder="(preferably a square image)" value="<%= album.albumCover %>" required>
        <br>
        <!-- ALBUM NAME -->
        <label for="albumName">Album Name:</label>
        <input type="text" id="albumName" name="albumName" value="<%= album.albumName %>" required>
        <br>
        <!-- BAND NAME -->
        <label for="bandName">Band Name:</label>
        <input type="text" id="bandName" name="bandName" value="<%= album.bandName %>" required>
        <br>
        <!-- ALBUM YEAR -->
        <label for="year">Year:</label>
        <input type="number" id="age" name="age" min="0" value="<%= album.year %>" required>
        <br>
        <!-- GENRE -->
        <label for="genre">Genre:</label>
        <input type="text" id="genre" name="genre" value="<%= album.genre %>" required>
        <br>
        <!-- DESCRIPTION -->
        <label for="description">Description:</label>
        <input type="text" id="description" name="description" value="<%= album.description %>">
        <br>
        <!-- FAVORITED? -->
        <label for="isFavorited">Favorited?</label>
        <select id="isFavorited" name="favorited" value="<%= album.isFavorited %>" required>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select>
        <br>
        <!-- SPOTIFY LINK -->
        <label for="spotifyLink">Spotify Link (URL):</label>
        <input type="text" id="spotifyLink" name="spotifyLink" value="<%= album.spotifyLink %>" required>
        <br>
        <!-- SONG LIST -->
        <label for="songList">Song List:</label>
        <input type="text" name="songList" value="<%= album.songList %>" required>
        <br>
        <!--  -->
        <input type="submit" value="Edit Album">
    </form>

    <%- include('./partials/footer.ejs') %>
</body>

</html>