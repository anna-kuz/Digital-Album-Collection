<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/header.ejs', {title: `Add an Album`}) %>
    <link rel="stylesheet" href="/styles/new.css">
</head>

<body>
    <%- include('./partials/nav.ejs') %>

    <section class="hero">
        <h2>Add an Album</h2>
        <h4></h4>
    </section>

    <form method="POST" action="/albums">
        <!-- ALBUM COVER -->
        <label for="albumCover">Album Cover (URL):</label>
        <input type="text" id="albumCover" name="albumCover" placeholder="(preferably a square image)" required>
        <br>
        <!-- ALBUM NAME -->
        <label for="albumName">Album Name:</label>
        <input type="text" id="albumName" name="albumName" required>
        <br>
        <!-- BAND NAME -->
        <label for="bandName">Band Name:</label>
        <input type="text" id="bandName" name="bandName" required>
        <br>
        <!-- ALBUM YEAR -->
        <label for="year">Year:</label>
        <input type="number" id="year" name="year" min="0" required>
        <br>
        <!-- GENRE -->
        <label for="genre">Genre:</label>
        <input type="text" id="genre" name="genre" required>
        <br>
        <!-- DESCRIPTION -->
        <label for="description">Description:</label>
        <input type="text" id="description" name="description">
        <br>
        <!-- FAVORITED? -->
        <label for="isFavorited">Favorited?</label>
        <select id="isFavorited" name="isFavorited" required>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select>
        <br>
        <!-- SPOTIFY LINK -->
        <label for="spotifyLink">Spotify Link (URL):</label>
        <input type="text" id="spotifyLink" name="spotifyLink" required>
        <br>
        <!-- SONG LIST -->
        <label for="songList">Song List:</label>
        <input type="text" name="songList" required>
        <br>
        <!--  -->
        <input type="submit" value="Add Album">
    </form>

    <%- include('./partials/footer.ejs') %>
</body>

</html>